extends layouts/main.pug
include mixins/videoBlock

block content
    .user_profile
        .user_profile__header
            image.avatar(src=user.avatarUrl)
            h4.userName=user.name
        if user.id === loggedUser.id
            .user_profile__btns
                button.user_profile__editProfile
                    a(href=`/users${routes.editProfile}`) Edit Profile
                button.user_profile__changePassword
                    a(href=`/users${routes.changePassword}`) Change Password
        .user-videos
            each item in user.videos
                +videoBlock({
                    id : item.id,
                    title: item.title,
                    views : item.views,
                    fileUrl: item.fileUrl
                })
