mixin videoPlayer(video= {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__row
            input.videoPlayer__time#jsTime(type="range", min="0", value="0")
        .videoPlayer__row
            .videoPlayer__controls
                
                .videoPlayer__column
                    
                    span#jsVolumeButton
                        i.fas.fa-volume-up
                    span#jsCurrentTime
                        span#CurrentTime 00:00:00
                        |/  
                        span#TotalTime 
                    input.videoPlayer__volume#jsVolume(type="range",min="0",max="1",step="0.1",value="0.5")

                .videoPlayer__column
                    span#jsPlayButton
                        i.fas.fa-play
                    
                .videoPlayer__column
                    span#jsFullScreenButton
                        i.fas.fa-expand